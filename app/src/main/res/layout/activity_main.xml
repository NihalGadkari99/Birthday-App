<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFF5EE">

    <ImageView
        android:id="@+id/birthdayCakeImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/birthday_cake"
        android:contentDescription="@string/content_desc_birthday_cake"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/birthDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="@string/hint_enter_birthdate"
        android:inputType="date"
        android:minHeight="48dp"
        android:autofillHints=""
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/birthDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_birthdate"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_convert"
        android:layout_marginBottom="16dp"/>

</LinearLayout>

